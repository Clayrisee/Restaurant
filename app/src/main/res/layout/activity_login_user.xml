<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginUser"
    android:background="@color/background"
    >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="50dp"
        android:id="@+id/et_phone_users"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter your phone number"
        android:padding="10dp"
        android:background="@drawable/edit_round"
        />
    <EditText
        android:layout_marginTop="50dp"
        android:layout_below="@id/et_phone_users"
        android:id="@+id/et_password_user"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/edit_round"
        />

    <Button
        android:id="@+id/btn_login_users"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/et_password_user"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="17dp"
        />
    <Button
        android:id="@+id/btn_signup"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/btn_login_users"
        android:layout_centerHorizontal="true"
        android:text="Don't have any account? \n SignUp now!"
        android:maxLines="2"
        android:textSize="15sp"
        />


</RelativeLayout>